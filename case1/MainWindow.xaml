<Window x:Class="case1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:case1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock TextWrapping="Wrap" Text="{Binding}"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Black" ClipToBounds="True">
        <Canvas Background="LightGoldenrodYellow" Margin="10,10,220,10" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
            <Path Stroke="Yellow" StrokeThickness="3" Data="{Binding PathGeometry}" />
            <ItemsControl ItemsSource="{Binding Points}">
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Ellipse Width="20" Height="20" Fill="Black" Stroke="Black" StrokeThickness="1" />
                            <TextBlock Text="" FontWeight="Bold" Foreground="Black" .HorizontalAlignment="Center" Margin="0,2,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
        <Button x:Name="Get1Order" Content="Несколько заказов в центре" Margin="0,10,10,0" />
        <Button x:Name="Get2Order" Content="Больше заказов, немного дальше от центра" Margin="0,50,10,0"/>
        <Button x:Name="Get3Order" Content="Заказы в одном районе" Margin="0,90,10,0"/>
        <Button x:Name="Get4Order" Content="Заказы в разных частях города" Margin="0,130,10,0"/>
        <Button x:Name="Get5Order" Content="Несколько заказов с разным приоритетом" Margin="0,170,10,0"/>
        <Button x:Name="Get6Order" Content="Много заказов" Margin="0,210,10,0"/>
    </Grid>
</Window>
    
